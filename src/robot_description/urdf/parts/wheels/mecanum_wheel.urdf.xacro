<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="$(find robot_description)/urdf/inertial_macros.xacro" />
    <xacro:include filename="$(find robot_description)/urdf/parts/wheels/mecanum_wheel.gazebo.xacro" />

    <xacro:macro name="mecanum_wheel" params="side radius width pos_x pos_y pos_z mass">
        <link name="${side}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
                <geometry>
                    <cylinder radius="${radius}" length="${width}" />
                </geometry>
                <material name="blue">
                    <color rgba="0.1764 0.4588 0.8509 1.0" />
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
                <geometry>
                    <cylinder radius="${radius}" length="${width}" />
                </geometry>
            </collision>

            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="${mass}" />
            <xacro:inertial_sphere mass="${mass}" radius="${radius}">
                <origin xyz="0 0 0" rpy="0 0 0" />
            </xacro:inertial_sphere>
        </link>

        <xacro:mecanum_wheel_link side="${side}" />

        <joint name="${side}_wheel_joint" type="continuous">
            <axis xyz="0 1 0" />
            <parent link="base_link" />
            <child link="${side}_wheel_link" />
            <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0" />
        </joint>
    </xacro:macro>
</robot>